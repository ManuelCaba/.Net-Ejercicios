<Page x:ConnectionId='1'
    x:Class="CRUDTrivial_UI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CRUDTrivial_UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:models="using:CRUDTrivial_UI.ViewModels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <models:TrivialVM></models:TrivialVM>
    </Page.DataContext>

    <RelativePanel>
        <TextBlock Text="{Binding ContadorPartidas}"
                   RelativePanel.AlignRightWithPanel="True"></TextBlock>
        
        <Image x:ConnectionId='2' x:Name="imgActor"
               Source="{Binding Path=URIFoto}"
               MaxWidth="300"
               MaxHeight="300"
               RelativePanel.AlignLeftWithPanel="True"
               RelativePanel.AlignRightWithPanel="True"
               RelativePanel.AlignTopWithPanel="True"></Image>
        
        <ListView x:ConnectionId='3' x:Name="lvwActores"
                  ItemsSource="{Binding Path=ListadoActoresJugadaActual}"
                  SelectedItem="{Binding Path=RespuestaSeleccionada, Mode=TwoWay}"
                  RelativePanel.Below="imgActor"
                  RelativePanel.AlignLeftWithPanel="True"
                  RelativePanel.AlignRightWithPanel="True"
                  RelativePanel.Above="stpContadoresJugadas">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Nombre}"
                               FontSize="30"
                               Margin="20"
                               HorizontalAlignment="Center"></TextBlock>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>

        <StackPanel x:ConnectionId='4' x:Name="stpContadoresJugadas"
                    Orientation="Horizontal"
                    RelativePanel.AlignBottomWithPanel="True"
                    RelativePanel.AlignLeftWithPanel="True"
                    Margin="20">

            <TextBlock Text="Respuestas Acertadas: "
                       Foreground="Green"
                       FontSize="20"
                       Margin="0,0,5,0"></TextBlock>
            <TextBlock Text="{Binding Path=RespuestasAcertadas}"
                       Foreground="Green"
                       FontSize="20"
                       Margin="0,0,20,0"></TextBlock>
            <TextBlock Text="Respuestas Incorrectas: "
                       Foreground="Red"
                       FontSize="20"
                       Margin="0,0,5,0"></TextBlock>
            <TextBlock Text="{Binding Path=RespuestasIncorrectas}"
                       FontSize="20"
                       Foreground="Red"></TextBlock>

        </StackPanel>

        <!-- No me ha dado tiempo a resolver el error. Se ha intentado :) -->
        <Button x:ConnectionId='5' Content="Nueva Partida"
                RelativePanel.AlignBottomWithPanel="True"
                RelativePanel.AlignRightWithPanel="True"
                                                            
                Margin="20"></Button>
    </RelativePanel>
</Page>

