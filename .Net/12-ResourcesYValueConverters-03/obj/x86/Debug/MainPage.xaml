<Page
    x:Class="_12_ResourcesYValueConverters_03.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_12_ResourcesYValueConverters_03"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>

        <Style TargetType="ContentControl" x:Key="GreenYellowBackground">
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush>
                            <GradientStop Offset="0" Color="Green"></GradientStop>
                            <GradientStop Offset="1" Color="Yellow"></GradientStop>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
        </Style>

        <Style TargetType="Button" x:Key="BigFontButtonStyle">
            <Setter Property="Control.Background" Value="AliceBlue"/>
            <Setter Property="Control.FontFamily" Value="Arial"/>
            <Setter Property="Control.Padding" Value="10"/>
            <Setter Property="Control.Margin" Value="20"/>
        </Style>

        <Style x:Key="Button3" TargetType="Button"
               BasedOn="{StaticResource GreenYellowBackground}">
            <Setter Property="Foreground" Value="Green" />
        </Style>
    </Page.Resources>

    <StackPanel>

        <Button Content="Boton1"
                Style="{StaticResource BigFontButtonStyle}"></Button>        
        <Button Content="Boton2"
                Style="{StaticResource BigFontButtonStyle}"></Button>        
        <Button Content="Boton3"
                Style="{StaticResource Button3}"></Button>
                

    </StackPanel>
</Page>

