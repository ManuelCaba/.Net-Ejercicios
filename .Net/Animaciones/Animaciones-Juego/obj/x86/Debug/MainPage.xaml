                <Setter Property="Height" Value="10"/>
                <Setter Property="Opacity" Value="0.2"/>
            </Style>

            <Storyboard x:ConnectionId='2' x:Name="AnimacionEstrellas">

                <DoubleAnimation EnableDependentAnimation="True"
                             RepeatBehavior="Forever"
                            Storyboard.TargetName="EstrellasGrandes"
                            Storyboard.TargetProperty="(Canvas.Top)"
                            From="-2000"
                            To="2200"
                            BeginTime="0:0:0"
                            Duration="0:0:15"/>

                <DoubleAnimation EnableDependentAnimation="True"
                             RepeatBehavior="Forever"
                            Storyboard.TargetName="EstrellasMedianas"
                            Storyboard.TargetProperty="(Canvas.Top)"
                            From="-1500"
                            To="1600"
                            BeginTime="0:0:0"
                            Duration="0:0:20"/>

                <DoubleAnimation EnableDependentAnimation="True"
                             RepeatBehavior="Forever"
                            Storyboard.TargetName="EstrellasPequeñas"
                            Storyboard.TargetProperty="(Canvas.Top)"
                            From="-1500"
                            To="1200"
                            BeginTime="0:0:0"
                            Duration="0:0:30"/>

            </Storyboard>
        </ResourceDictionary>

    </Page.Resources>

