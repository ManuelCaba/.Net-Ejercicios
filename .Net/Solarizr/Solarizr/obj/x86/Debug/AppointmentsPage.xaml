                    Grid.Row="0"
                    Grid.ColumnSpan="2"
                    VerticalAlignment="Center"
                    Margin="20">

            <TextBlock Text="S"
                       VerticalAlignment="Center"
                       FontSize="50"
                       Foreground="#FFF39F1B"></TextBlock>

            <Image Source="/Assets/Images/solarizr.png" 
                   Width="50"/>

            <TextBlock Text="LARIZR"
                       VerticalAlignment="Center"
                       FontSize="50"
                       Foreground="#FFF39F1B"></TextBlock>

        </StackPanel>

        <Grid Grid.Column="0"
              Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="2.5*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Maps:MapControl x:ConnectionId='8' Grid.Column="0"
                             Grid.Row="1"
                             Margin="30,0,0,0"
                             MaxWidth="400"
                             MaxHeight="400"
                             x:Name="Mapa"
                             MapServiceToken="8yJ6qhK8CMSDpUTJ7DDv~UU6P-s0mwm0Ud2Egp_EqCg~AgC35sUiwbQkm-HbZDNwQqNRWkURkqOGTRSb0-o0nTZg2_YBeHlPWRvqXnarYDEx"/>

            <Border x:ConnectionId='9' Grid.Column="1"
                    Grid.Row="1"
                    BorderThickness="1"
                    Background="Black"
                    Opacity="0.8"
                    Margin="0,0,30,0"
                                            
                    IsTapEnabled="True">

                <RelativePanel Margin="15">
                    <TextBlock x:ConnectionId='10' Name="txbFecha"
                               Text="Saturday, Sept 30"
                               FontSize="50"
                               Foreground="White"
                               RelativePanel.AlignTopWithPanel="True"
                               RelativePanel.AlignLeftWithPanel="True"></TextBlock>

                    <TextBlock x:ConnectionId='11' x:Name="txbHora" 
                               Text="2:45"
                               FontSize="50"
                               Foreground="White" 
                               FontWeight="Bold"
                               RelativePanel.Below="txbFecha"></TextBlock>


                    <TextBlock x:ConnectionId='12' x:Name="txbDireccion" 
                               Text="Calle Tintilla, 6"
                               FontSize="40"
                               TextWrapping="Wrap"
                               Foreground="White"
                               RelativePanel.Below="txbHora"></TextBlock>

                    <Border BorderThickness="1"
                            Height="1"
                            RelativePanel.Above="stpButtons"
                            BorderBrush="White"
                            RelativePanel.AlignLeftWithPanel="True"
                            RelativePanel.AlignRightWithPanel="True"
                            Margin="10"></Border>

                    <StackPanel x:ConnectionId='13' x:Name="stpButtons" 
                                Orientation="Horizontal"
                                RelativePanel.AlignBottomWithPanel="True"
                                RelativePanel.AlignHorizontalCenterWithPanel="True">

                        <AppBarButton Icon="Calendar"
                                      Foreground="White"></AppBarButton>
                        <AppBarButton Icon="Phone"
                                      Foreground="White"></AppBarButton>
                        <AppBarButton Icon="Go"
                                      Foreground="White"></AppBarButton>
                        <AppBarButton Icon="Edit"
                                      Foreground="White"></AppBarButton>
                    </StackPanel>

                </RelativePanel>

            </Border>

            <TextBlock></TextBlock>

        </Grid>

