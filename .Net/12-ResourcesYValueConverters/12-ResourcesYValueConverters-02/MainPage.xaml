<Page
    x:Class="_12_ResourcesYValueConverters_02.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_12_ResourcesYValueConverters_02"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:converters="using:_12_ResourcesYValueConverters_02.Converters"
    xmlns:modelos= "using:_12_ResourcesYValueConverters_02.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <modelos:clsPersona></modelos:clsPersona>
    </Page.DataContext>

    <Page.Resources>
        <converters:DateConverter x:Key="formatoCadena" />
    </Page.Resources>

    <RelativePanel>
        <TextBox Text="{Binding Path=FechaNacimiento, Mode=TwoWay, Converter={StaticResource formatoCadena}}"></TextBox>
    </RelativePanel>
</Page>
