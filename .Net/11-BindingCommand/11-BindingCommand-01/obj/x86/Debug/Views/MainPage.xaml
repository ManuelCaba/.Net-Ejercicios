<Page x:ConnectionId='1'
    x:Class="_11_BindingCommand_01.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_11_BindingCommand_01"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <RelativePanel>

        <MenuBar x:ConnectionId='2' Name="menubarListaPersonas"
                 RelativePanel.AlignTopWithPanel="True"
                 RelativePanel.AlignLeftWithPanel="True">
            <MenuBarItem Title="Persona">
                <MenuFlyoutItem x:ConnectionId='10' Text="Eliminar"
                                Icon="Delete"
                                                                            />
            </MenuBarItem>
        </MenuBar>


        <AppBarButton x:ConnectionId='3' Name="abbDelete" 
                Icon="Delete"
                                                            
                RelativePanel.Below="menubarListaPersonas"/>

        <StackPanel Orientation="Horizontal"
                    RelativePanel.RightOf="abbDelete"
                    RelativePanel.Below="menubarListaPersonas"
                    Margin="40,0,0,0">

            <TextBox x:ConnectionId='8' PlaceholderText="Buscar..."
                                                                                                                  
                     MinWidth="500"
                     VerticalContentAlignment="Center"
                     FontSize="20"/>
            <AppBarButton x:ConnectionId='9'                                                   Icon="Find"/>

        </StackPanel>
        
        <ListView x:ConnectionId='4' x:Name="lvwPersonas"
                                                          
                                                                                           
                                                                                              
                  RelativePanel.AlignLeftWithPanel="True"
                  RelativePanel.AlignRightWithPanel="True"
                  RelativePanel.AlignBottomWithPanel="True"
                  RelativePanel.Below="abbDelete"
                  BorderBrush="Black"
                  BorderThickness="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal"
                                Margin="20">
                        <TextBlock Text="{Binding Path= Nombre}"
                                   FontSize="20"
                                   Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding Path= Apellidos}"
                                   FontSize="20"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ContextFlyout>
                <MenuFlyout x:ConnectionId='6' x:Name="allContactsMenuFlyout">
                    <MenuFlyout.Items>
                        <MenuFlyoutItem x:ConnectionId='7' x:Name="Eliminar"  
                                        Text="Eliminar" 
                                        Icon="Delete"
                                                                                    />
                    </MenuFlyout.Items>
                </MenuFlyout>
            </ListView.ContextFlyout>
        </ListView>
    </RelativePanel>
</Page>

