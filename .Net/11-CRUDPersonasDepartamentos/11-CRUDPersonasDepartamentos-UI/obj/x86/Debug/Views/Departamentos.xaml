<Page x:ConnectionId='1'
    x:Class="_11_CRUDPersonasDepartamentos_UI.Views.Departamentos"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_11_CRUDPersonasDepartamentos_UI.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <RelativePanel>

        <StackPanel x:ConnectionId='2' x:Name="stpBuscar"
                    Orientation="Horizontal"
                    Margin="20,0,0,0">

            <TextBox x:ConnectionId='12' PlaceholderText="Buscar..."
                                                                                                                  
                     MinWidth="300"
                     MaxHeight="35"
                     VerticalContentAlignment="Center"
                     FontSize="15"/>
            <AppBarButton x:ConnectionId='13' Icon="Find"
                                                                                            />

        </StackPanel>

        <StackPanel x:ConnectionId='3' x:Name="stpOpcionesDepartamentos" 
                    Orientation="Horizontal"
                    RelativePanel.RightOf="stpBuscar">
            <AppBarButton x:ConnectionId='8' Icon="Add"
                                                                              ></AppBarButton>
            <AppBarButton x:ConnectionId='9' Icon="Delete"
                                                                                 ></AppBarButton>
            <AppBarButton x:ConnectionId='10' Icon="Save"
                                                                                ></AppBarButton>
            <AppBarButton x:ConnectionId='11' Icon="Refresh"
                                                                              ></AppBarButton>
        </StackPanel>

        <ListView x:ConnectionId='4' x:Name="lvwDepartamentos" 
                                                                                                      
                                                                                                        
                  RelativePanel.Below="stpBuscar"
                  RelativePanel.AlignLeftWithPanel="True"
                  RelativePanel.AlignBottomWithPanel="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal"
                                Margin="20">
                        <TextBlock Text="{Binding Nombre}"
                                   Margin="0,0,5,0"
                                   FontSize="15"/>
                    </StackPanel>

                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Grid x:ConnectionId='5' x:Name="grdFormulario" 
              RelativePanel.AlignRightWithPanel="true"
              RelativePanel.RightOf="stpBuscar"
              RelativePanel.Below="stpOpcionesDepartamentos"
              RelativePanel.AlignBottomWithPanel="True">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>



            <TextBlock Grid.Column="0"
                       Grid.Row="0"
                       Margin="20"
                       FontSize="20"
                       Text="Nombre: "/>

            <TextBox x:ConnectionId='6' Grid.Column="1"
                     Grid.Row="0"
                     Margin="20"
                     FontSize="20"
                     Background="White"
                     MinWidth="30"
                                                                                                                                             
                                                                                      />

        </Grid>
    </RelativePanel>
</Page>

