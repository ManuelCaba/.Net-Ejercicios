        <StackPanel x:ConnectionId='2' x:Name="stpBuscar"
                    Orientation="Horizontal"
                    Margin="40,0,0,0">

            <TextBox PlaceholderText="Buscar..."
                     MinWidth="500"
                     VerticalContentAlignment="Center"
                     FontSize="20"/>
            <AppBarButton Icon="Find"/>

        </StackPanel>

        <StackPanel x:ConnectionId='3' x:Name="stpOpcionesPersonas" 
                    Orientation="Horizontal"
                    RelativePanel.RightOf="stpBuscar">
            <AppBarButton Icon="Add"></AppBarButton>
            <AppBarButton Icon="Delete"></AppBarButton>
            <AppBarButton Icon="Save"></AppBarButton>
        </StackPanel>

        <ListView x:ConnectionId='4' x:Name="lvwPersonas" 
                                                                                            
                                                                          
                  RelativePanel.Below="stpBuscar"
                  RelativePanel.AlignLeftWithPanel="True"
                  RelativePanel.AlignBottomWithPanel="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal"
                                Margin="20">
                        <TextBlock Text="{Binding Nombre}"
                                   Margin="0,0,5,0"
                                   FontSize="20"/>
                        <TextBlock Text="{Binding Apellidos}"
                                   FontSize="20"/>
                    </StackPanel>

                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Grid x:ConnectionId='5' x:Name="grdFormulario" 
              RelativePanel.AlignRightWithPanel="true"
              RelativePanel.RightOf="stpBuscar"
              RelativePanel.Below="stpOpcionesPersonas"
              RelativePanel.Above="apbAddPerson">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>



            <TextBlock Grid.Column="0"
                       Grid.Row="0"
                       Margin="20"
                       FontSize="20"
                       Text="Nombre: "/>

            <TextBox Grid.Column="1"
                     Grid.Row="0"
                     Margin="20"
                     FontSize="20"
                     Background="White"
                     MinWidth="30"
                     Text="{Binding Path = PersonaSeleccionada.Nombre}"/>

            <TextBlock Grid.Column="0"
                       Grid.Row="1"
                       Margin="20"
                       FontSize="20"
                       Text="Apellidos: "/>

            <TextBox Grid.Column="1"
                     Grid.Row="1"
                     Margin="20"
                     FontSize="20"
                     Background="White"
                     MinWidth="30"
                     Text="{Binding Path = PersonaSeleccionada.Apellidos}"/>

            <TextBlock Grid.Column="0"
                       Grid.Row="2"
                       Margin="20"
                       FontSize="20"
                       Text="Fecha de Nacimiento: "/>

            <TextBox Grid.Column="1"
                     Grid.Row="2"
                     Margin="20"
                     FontSize="20"
                     Background="White"
                     MinWidth="30"
                     Text="{Binding Path = PersonaSeleccionada.FechaNacimiento}"/>

            <TextBlock Grid.Column="0"
                       Grid.Row="3"
                       Margin="20"
                       FontSize="20"
                       Text="Teléfono: "/>

            <TextBox Grid.Column="1"
                     Grid.Row="3"
                     Margin="20"
                     FontSize="20"
                     Background="White"
                     MinWidth="30"
                     Text="{Binding Path = PersonaSeleccionada.Telefono}"/>

            <TextBlock Grid.Column="0"
                       Grid.Row="4"
                       Margin="20"
                       FontSize="20"
                       Text="Departamentos: "/>

            <ComboBox Grid.Column="1"
                     Grid.Row="4"
                     Margin="20"
                     FontSize="20"
                     Background="White"
                     Text="{Binding Path = PersonaSeleccionada.Telefono}"/>

            <RelativePanel Grid.Column="0"
                           Grid.ColumnSpan="2"
                           Grid.Row="5">

                <TextBlock x:ConnectionId='7' Name="txbDireccion" 
                           Margin="20"
                           FontSize="20"
                           Text="Dirección: "
                           RelativePanel.AlignTopWithPanel="True"
                           RelativePanel.AlignLeftWithPanel="True"/>

                <TextBox RelativePanel.AlignLeftWithPanel="True"
                         RelativePanel.AlignRightWithPanel="True"
                         RelativePanel.AlignBottomWithPanel="True"
                         RelativePanel.Below="txbDireccion"
                         Margin="20"
                         TextWrapping="Wrap"
                         FontSize="20"
                         Background="White"
                         Text="{Binding Path = PersonaSeleccionada.Direccion}"/>

            </RelativePanel>

        </Grid>

        <AppBarButton x:ConnectionId='6' x:Name="apbAddPerson" 
                      Icon="AddFriend"
                      RelativePanel.AlignRightWithPanel="True"
                      RelativePanel.AlignBottomWithPanel="True"></AppBarButton>
    </RelativePanel>
</Page>

