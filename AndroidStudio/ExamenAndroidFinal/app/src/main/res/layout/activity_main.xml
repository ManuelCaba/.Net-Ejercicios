<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/contenedorOpciones"
        app:layout_constraintWidth_percent="0.3"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/contenedorInsertar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:name="es.iesnervion.mcaballero.examenandroidfinal.FragmentOpciones"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/contenedorInsertar"
        app:layout_constraintWidth_percent="0.3"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintLeft_toRightOf="@id/contenedorOpciones"
        app:layout_constraintRight_toLeftOf="@id/contenedorLista"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:name="es.iesnervion.mcaballero.examenandroidfinal.FragmentInsertProg"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/contenedorLista"
        app:layout_constraintWidth_percent="0.4"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintLeft_toRightOf="@id/contenedorInsertar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:name="es.iesnervion.mcaballero.examenandroidfinal.FragmentListado"/>

</androidx.constraintlayout.widget.ConstraintLayout>