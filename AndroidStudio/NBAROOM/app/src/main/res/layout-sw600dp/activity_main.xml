<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/contenedorNavegacion"
        app:layout_constraintWidth_percent="0.5"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/contenedorCrear"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:name="es.iesnervion.mcaballero.nbaroom.ListFragment"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/contenedorCrear"
        app:layout_constraintWidth_percent="0.5"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintLeft_toRightOf="@id/contenedorNavegacion"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:name="es.iesnervion.mcaballero.nbaroom.CreateFragment"/>

</androidx.constraintlayout.widget.ConstraintLayout>